!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Eventor
    %script{:src => "//maps.google.com/maps/api/js?v=3.24&libraries=geometry&key=AIzaSyD0SQuZQcy11HUDGapDT0e0o1fu648cxiA", :type => "text/javascript"}
    -#%script{:src => "//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js", :type => "text/javascript"}
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body{ class: "#{controller_name} #{action_name} #{controller_path.split('/').first}" }
    %nav.navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container-fluid
        .navbar-header
          %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: root_path}
            Better BlogTo Events Map
        .collapse.navbar-collapse
          %form.navbar-form.pull-right{ action: "/", method: "GET", name: "search" }
            .form-group
              #datetimepicker1.input-group.date
                %input.form-control{:type => "text", name: "date", value: @date.strftime("%Y/%m/%d")}/
                %span.input-group-addon
                  %span.glyphicon.glyphicon-calendar
            :javascript
              $(function () {
                $('#datetimepicker1').datetimepicker({
                  format: "YYYY/MM/DD"
                });

                $('#datetimepicker1').on("dp.change", function(e){
                  console.log("changed date")
                  $("form[name=search]").submit()
                })
              });

            -#= submit_tag "Check day", class: "form-control btn-info"
    = yield
